steps:

### Build
  - id: 'build'
    name: 'gcr.io/cloud-builders/docker'
    args: ['build', '-t', 'us-central1-docker.pkg.dev/$PROJECT_ID/$AR_REPO_NAME/$APP_NAME:${SHORT_SHA}', './src/frontend']
    waitFor: ['-']

### Publish
  - id: 'publish'
    name: 'gcr.io/cloud-builders/docker'
    args: ['push',  'us-central1-docker.pkg.dev/$PROJECT_ID/$AR_REPO_NAME/$APP_NAME:${SHORT_SHA}']

### Deploy
  - id: 'deploy'
    name: 'gcr.io/cloud-builders/gcloud'
    env:
      - 'KUBECONFIG=/kube/config'
    entrypoint: 'bash'
    args:
      - '-c'
      - |
          PROJECT=$$(gcloud config get-value core/project)          

          gcloud container clusters get-credentials "${CLUSTER}" \
            --project "$${PROJECT}" \
            --location "${LOCATION}"  

          sed -i 's|us-central1-docker.pkg.dev/$PROJECT_ID/$AR_REPO_NAME/$APP_NAME:.*|us-central1-docker.pkg.dev/$PROJECT_ID/$AR_REPO_NAME/$APP_NAME:${SHORT_SHA}|' ./k8s/deployments/prod/*.yaml
          
          kubectl apply -f k8s/deployments/prod/frontend.yaml

images:
  - us-central1-docker.pkg.dev/$PROJECT_ID/$AR_REPO_NAME/$APP_NAME

options:
  logging: CLOUD_LOGGING_ONLY
